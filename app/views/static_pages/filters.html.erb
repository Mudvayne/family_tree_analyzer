<div class="text-center">
	<h1>Filter your family tree!</h1>
	<div class="jumbotron">
		<div class="row">
			<div class="col-md-4">
				<h3>Persons not for analysis</h3>
				<div style="height: 486px; overflow: auto">
					<ul class="list-group">
						<% 20.times do |i| %>
							<li class="list-group-item">Person <%= i %></li>
						<% end %>
					</ul>
				</div>
				<br />
				# persons in tree: <%= @individuals %>
				<br />
				# families in tree: <%= @families %>
			</div>
			<div class="col-md-4">
				<div class="row">
					<h3>Filter</h3>
					<form class="form-inline filters">
						<div class="input-group">
							<span class="input-group-addon bordered height-35px">
							<input type="radio">
							</span>
							<span class="input-group-addon">
							All
							</span>
						</div>
						<% @fields.each do |field| %>
						<div class="input-group">
							<span class="input-group-addon">
							<input type="checkbox">
							</span>
							<span class="input-group-addon no-border-right"><%= field %></span>
							<input type="text" class="form-control">
						</div>
						<% end %>
					</form>
				</div>
			</div>
			<div class="col-md-4">
				<h3>Persons for analysis</h3>
				<div style="height: 486px; overflow: auto">
					<ul class="list-group">
						<% 20.times do |i| %>
							<li class="list-group-item">Filter <%= i %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
		<button type="button" class="btn btn-primary text-center btn-lg" style="margin-left: 8px;">&laquo;</button>
					<button type="button" class="btn btn-primary text-center btn-lg">&raquo;</button>
	</div>
	<button type="submit" class="btn btn-lg btn-primary">Start analysis</button>
</div>