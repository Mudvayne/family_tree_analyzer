<%= form_tag(filters_path, action: :post, class: "form-inline filters") do %>
  <div class="text-center">
    <h1>Filter your family tree!</h1>
    <div class="jumbotron">
      <div class="row">
        <div class="col-md-4">
          <h3>Persons not for analysis</h3>
          <div style="height: 486px; overflow: auto">
            <ul class="list-group">
              <% if @persons != nil %>
                <% @persons.each do |i| %>
                  <li class="list-group-item">
                    <%#=i.firstname + " | " + i.lastname%>
                    <%=i.to_s%>
                    <input type="hidden" name="persons[]" value="<%= i.id %>" >
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
          <br>
          # persons in list: <%= @persons.count %>
        </div>
        <div class="col-md-4">
          <div class="row">
            <h3>Filter</h3>
            <form class="form-inline filters">
              <div class="input-group">
                <span class="input-group-addon bordered height-35px">
                <input type="radio" name="all_radiobox">
                </span>
                <span class="input-group-addon"> All </span>
              </div>
              <% @fields.each do |field| %>
                <div class="input-group">
                  <span class="input-group-addon">
                    <input type="checkbox" name="<%= field[0] %>_checkbox">
                  </span>
                  <span class="input-group-addon no-border-right"><%= field[1] %></span>
                  <input type="text" name="<%= field[0] %>" class="form-control">
                </div>
              <% end %>
              <div class="input-group">
                <span class="input-group-addon">
                  <input readonly="" type="checkbox">
                </span>
                <div class="input-group-btn">
                  <button class="btn btn-default" data-toggle="modal" data-target=".bs-example-modal-lg" onclick="return false;">
                    Lar modal
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="col-md-4">
          <h3>Persons for analysis</h3>
          <div style="height: 486px; overflow: auto">
            <ul class="list-group">
              <% @persons_for_analysis.each do |i| %>
                <li class="list-group-item">
                  <%#=i.firstname + " | " + i.lastname%>
                  <%=i.to_s%>
                  <input type="hidden" name="persons_for_analysis[]" value="<%= i.id %>" >
                </li>
              <% end %>
            </ul>
          </div>
          <br>
          # persons in list: <%= @persons_for_analysis.count %>
        </div>
      </div>
    </div>
    <%= button_tag "«", value: "to_left", class: "btn btn-primary text-center btn-lg", style: "margin-left: 8px;" %>
    <%= button_tag "»", value: "to_right", class: "btn btn-primary text-center btn-lg", style: "margin-left: 8px;" %>
    <br> <br>
    <button type="submit" class="btn btn-lg btn-primary">Start analysis</button>
  </div>

  <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          here goes the b00dy
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<% end %>